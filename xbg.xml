<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<!-- 逆向工程的配置 -->
<generatorConfiguration>


	<context id="DB2Tables" targetRuntime="MyBatis3">
        <!--设置逆向工程生成的类没有注解 -->
		<commentGenerator>
			<property name="suppressAllComments" value="true"></property>
		</commentGenerator>


		<!-- 配置数据库连接 -->
		<jdbcConnection driverClass="com.mysql.jdbc.Driver"
			connectionURL="jdbc:mysql://localhost:3306/ssm_crud" userId="root"
			password="123456">
		</jdbcConnection>

		<javaTypeResolver>
			<property name="forceBigDecimals" value="false" />
		</javaTypeResolver>
		<!-- 指定javabean生成的位置 -->
		<javaModelGenerator targetPackage="com.mycode.bean"
			targetProject=".\src\main\java">
			<property name="enableSubPackages" value="true" />
			<property name="trimStrings" value="true" />
		</javaModelGenerator>
		<!-- 指定sql映射文件生成的位置 -->
		<sqlMapGenerator targetPackage="mapper" targetProject=".\src\main\resources">
			<property name="enableSubPackages" value="true" />
		</sqlMapGenerator>
		<!-- 指定dao接口生成的位置，mapper接口 -->
		<javaClientGenerator type="XMLMAPPER"
			targetPackage="com.mycode.dao" targetProject=".\src\main\java">
			<property name="enableSubPackages" value="true" />
		</javaClientGenerator>
		<!-- table指定每个表的生成策略 -->
		<!-- tableName="tbl_emp对应的数据库的表名称 -->
		<!--domainObjectName 对应的要生成的bean的类名 -->
		<table tableName="tbl_emp" domainObjectName="Employee"></table>
		<table tableName="tnl_dept" domainObjectName="Department"></table>
	</context>
</generatorConfiguration>